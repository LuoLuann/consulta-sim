<%= form_with model: @patient do |form| %>
    <div>
        <%= form.label :fullname %><br>
        <%= form.text_field :fullname %>
        <% form.object.errors.full_messages_for(:fullname).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <br>
    <div>
        <%= form.label :email %><br>
        <%= form.email_field :email %>
        <% form.object.errors.full_messages_for(:email).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <br>
    <div>
        <%= form.label :date_of_birth %><br>
        <%= form.date_field :date_of_birth %>
        <% form.object.errors.full_messages_for(:date_of_birth).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <br>
    <div>
        <%= form.label :cpf %><br>
        <%= form.text_field :cpf %>
        <% form.object.errors.full_messages_for(:cpf).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <br>
    <div>
        <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
        <%= form.submit "Confirmar" %>

    </div>
<% end %>
